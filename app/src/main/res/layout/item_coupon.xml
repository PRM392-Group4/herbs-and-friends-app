<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:elevation="4dp"
    android:foreground="?attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/tv_coupon_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Coupon Name"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="@color/h_primary"/>

        <TextView
            android:id="@+id/tv_coupon_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CODE123"
            android:textStyle="italic"
            android:textColor="@color/h_secondary"
            android:layout_marginTop="4dp"/>

        <TextView
            android:id="@+id/tv_coupon_discount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-20%"
            android:textStyle="bold"
            android:textColor="@color/h_primary"
            android:layout_marginTop="4dp"/>

        <TextView
            android:id="@+id/tv_coupon_validity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Valid: 01/01/2024 - 31/12/2024"
            android:textSize="12sp"
            android:textColor="@android:color/darker_gray"
            android:layout_marginTop="4dp"/>

        <!-- Action Buttons Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="12dp"
            android:gravity="end">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_edit_coupon"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/btn_edit_text"
                android:textColor="@color/h_primary"
                android:layout_marginEnd="8dp"
                app:icon="@drawable/ic_edit"
                app:iconTint="@color/h_primary"
                app:iconGravity="textStart"
                app:iconPadding="4dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_delete_coupon"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/btn_delete_text"
                android:textColor="@color/h_red"
                app:icon="@drawable/ic_delete"
                app:iconTint="@color/h_red"
                app:iconGravity="textStart"
                app:iconPadding="4dp"/>

        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView> 