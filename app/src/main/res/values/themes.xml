<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.HerbsAndFriends" parent="Theme.Material3.DayNight.NoActionBar">

        <!-- Brand Colors -->
        <item name="colorPrimary">@color/h_primary</item>
        <item name="colorOnPrimary">@color/h_on_primary</item>

        <item name="colorSecondary">@color/h_secondary</item>
        <item name="colorOnSecondary">@color/h_on_secondary</item>

        <item name="colorTertiary">@color/h_tertiary</item>

        <!-- Backgrounds -->
        <item name="android:colorBackground">@color/h_background</item>
        <item name="colorOnBackground">@color/h_on_background</item>

        <item name="colorSurface">@color/h_surface</item>
        <item name="colorOnSurface">@color/h_on_surface</item>

        <!-- Semantic Colors -->
        <item name="colorError">@color/h_error</item>

        <!-- Optional status bar styling -->
        <item name="android:statusBarColor" tools:targetApi="l">@android:color/transparent</item>
    </style>
</resources>